
<% if(@this_is_the_index_page) %>
  true
<% else %>
  false
<% end %>

<% if(@this_is_the_index_page) %>
  <!-- index.html.erb related content -->

  <div class="row text-center" id="queryRow">
    
    <div class="col-xs-6">
      <h5><%= sparql_query.name %></h5>
    </div>

    <div class="col-xs-2">
      <%= link_to sparql_query do %>
        <button class="btn btn-info">
          Edit
        </button>
      <% end %>
    </div>

    <div class="col-xs-2">
      <%= link_to sparql_query, remote: true, method: :delete,
          data: { confirm: 'Are you sure?' } do %>
        <button class="btn btn-danger">Delete!</button>
      <% end %>
    </div>

  </div>

<% else %>
<!-- show.html.erb related content -->

  <li class="list-group-item list-group-item-info">
    <h3><%= sparql_query.name %></h3>

    <%#= sparql_query.query %>

    <p>Endpoint: <%= sparql_query.sparqlEndpoint.name %></p>

    <% if(sparql_query.parentQuery == nil) %>
    <% else %>
      <p>Root Query: <%= sparql_query.parentQuery.name %></p>
    <% end %>

    <%= link_to edit_sparql_query_path(sparql_query), remote: true do %>
      <button class="btn btn-primary btn-xs">Edit</button>
    <% end %>

    <%= link_to sparql_query, remote: true, method: :delete,
        data: { confirm: 'Are you sure?' } do %>
      <button class="btn btn-danger btn-xs">Delete!</button>
    <% end %>
  </li>

<% end %>